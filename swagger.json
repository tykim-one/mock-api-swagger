{
    "openapi": "3.0.0",
    "info": {
      "title": "My Mock API",
      "description": "백엔드 없이 Mock JSON 데이터를 사용하는 예시 API입니다.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3000"
      }
    ],
    "paths": {
      "/users": {
        "get": {
          "summary": "모든 사용자 목록 가져오기",
          "description": "시스템에 등록된 모든 사용자의 목록을 반환합니다.",
          "responses": {
            "200": {
              "description": "성공적인 응답",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "examples": {
                    "success": {
                      "summary": "사용자 목록 예시",
                      "value": [
                        {
                          "id": 1,
                          "name": "김철수",
                          "email": "chulsoo.kim@example.com"
                        },
                        {
                          "id": 2,
                          "name": "이영희",
                          "email": "younghee.lee@example.com"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/users/{userId}": {
        "get": {
          "summary": "특정 사용자 정보 가져오기",
          "description": "ID로 특정 사용자의 정보를 조회합니다.",
          "parameters": [
            {
              "name": "userId",
              "in": "path",
              "required": true,
              "description": "조회할 사용자의 ID",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "성공적인 응답",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    }
                  },
                  "examples": {
                    "user1": {
                      "summary": "ID가 1인 사용자 예시",
                      "value": {
                        "id": 1,
                        "name": "김철수",
                        "email": "chulsoo.kim@example.com"
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "사용자를 찾을 수 없음"
            }
          }
        }
      }
    }
  }